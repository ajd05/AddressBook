<h1> Please login to your existing account</h1>

<%= form_for :article, url: articles_path do |f| %>
 
  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </p>
 
  <p>
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>
 
  <p>
    <%= f.submit 'login'%>
  </p>
 
<% end %>